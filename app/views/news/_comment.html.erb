<li id="comment-item-<%= @cmnt.id %>">
  <div class="comment-details">
    <div class="commenter"><%= @cmnt.author.username %></div>
    <% if permitted_to? :delete_comment , :news %>
    <div class="delete-comment"><%= link_to_remote  'Delete', :url => { :controller => 'news', :action => 'delete_comment', :id => @cmnt } %></div>
    <%end%>
    <div class="comment-posted-at">posted <%= time_ago_in_words(@cmnt.created_at) %> ago</div>
  </div>
  <div class="comment-content"><%= @cmnt.content.strip.gsub("\n", "<br/>") %></div>
</li>